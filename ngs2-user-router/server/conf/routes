# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
# GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
# GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
# GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
# GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
GET     /                          controllers.ApplicationController.index()
POST    /login                     controllers.AuthenticationController.login()
POST    /login                     controllers.AuthenticationController.authenticateAdmin()
POST    /upload                    controllers.ApplicationController.uploadCSVFile()
#PUT     /experiments                controllers.ExperimentController.createExperiment

#POST    /experiments/:experimentId  controllers.ExperimentController.updateExperiment(experimentId:Long)

#DELETE  /experiments/:experimentId  controllers.ExperimentController.deleteExperiment(experimentId:Long)

#GET     /experiments/               controllers.ExperimentController.getAllExperiments()