# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
# GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
# GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
# GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
#GET     /app/index                           controllers.ApplicationController.index()
GET     /                           controllers.Assets.at(path="../client/app/views/", file="index.html")

# Admin Login routes
POST    /app/login                      controllers.AuthenticationController.login
POST    /app/logout                     controllers.AuthenticationController.logout
GET     /app/isauthenticated            controllers.AuthenticationController.isAuthenticated

# Admin CRUD routes
GET     /app/createExperiment           controllers.ExperimentController.createExperiment
POST    /app/updateExperiment/:id       controllers.ExperimentController.updateExperiment(id: Long)
POST    /app/deleteExperiment/:id       controllers.ExperimentController.deleteExperiment(id: Long)
GET     /app/allExperiments             controllers.ExperimentController.getAllExperiments()
GET     /app/experimentsByUser/:userId  controllers.ExperimentUserInfoController.experimentsByUser(userId: Long)
GET     /app/usersByExperiment/:expId   controllers.ExperimentUserInfoController.usersByExperiment(expId: Long)

#POST   /upload                     controllers.ApplicationController.uploadCSVFile()
GET     /assets/*file               controllers.Assets.at(path="/public", file)